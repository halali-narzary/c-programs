#include <stdio.h>
#include <stdlib.h> 
#include <time.h>   

int main() {

    int marks[20][5];
    int students = 20;
    int subjects = 5;

    srand(time(NULL));

    for (int i = 0; i < students; i++) {
        for (int j = 0; j < subjects; j++) {
            marks[i][j] = rand() % 101;
        }
    }

    printf("(d) Scores of every student:\n");
    for (int i = 0; i < students; i++) {
        printf("Student %-2d: ", i + 1);
        for (int j = 0; j < subjects; j++) {
            printf("%3d ", marks[i][j]);
        }
        printf("\n");
    }

    printf("\n(a) Average marks in each subject:\n");
    for (int j = 0; j < subjects; j++) {
        int sum_subject = 0;
        for (int i = 0; i < students; i++) {
            sum_subject += marks[i][j];
        }
        printf("Subject %d: %.2f\n", j + 1, (float)sum_subject / students);
    }

    int students_below_50 = 0;
    printf("\n(b) Average marks for every student:\n");
    for (int i = 0; i < students; i++) {
        int sum_student = 0;
        for (int j = 0; j < subjects; j++) {
            sum_student += marks[i][j];
        }
        float student_avg = (float)sum_student / subjects;
        printf("Student %-2d: %.2f\n", i + 1, student_avg);
        if (student_avg < 50) {
            students_below_50++;
        }
    }

    printf("\n(c) Number of students with average below 50: %d\n", students_below_50);

    return 0;
}
